body{font-family: '微软雅黑 Light', '微软雅黑';}
ul,li{list-style: none;}
.wk_container_regist{
	width: 100%;
	height: 820px;
	overflow: hidden;
	background-image: url(../images/u0.jpg);
	background-size: 100% 100%;
	background-repeat: no-repeat;
	position: relative;
}
.wk_container_regist>span{
	font-size: 32px;
	font-weight: bold;
	color: #fff;
	position: absolute;
	left: 50%;
	margin-left: -135px;
	top:85px;
}
.wk_regist{
	width: 410px;
	height: 300px;
	border-radius:5px ;
	background: #fff;
	margin: 182px auto;
	padding: 0px 55px;
	overflow: hidden;
}
.wk_regist p,.wk_regist_upload p,.wk_regist_password p,.wk_regist_phone p{
	width: 100%;
	overflow: hidden;
	font-size: 20px;
	font-weight: bold;
	color: #333;
	margin-top: 50px;
}
.wk_regist div{
	width: 100%;
	overflow: hidden;
	padding-bottom: 10px;
	border-bottom:1px solid #ccc;
	margin-top: 50px;
	color: #666;
}
.wk_regist div:after{
	content: ">";
	float: right;
}
.wk_container_regist a{
	display: block;
	width: 319px;
	height: 50px;
	background: #ccc;
	border-radius:2px ;
	text-align: center;
	line-height: 50px;
	font-size: 13px;
	color: #fff;
	margin: 40px auto;
}
.wk_regist_upload{
	width: 410px;
	height: 700px;
	border-radius:5px ;
	background: #fff;
	margin: 60px auto;
	padding: 0px 55px;
	border: 1px solid transparent;
}
.wk_regist_upload>div{
	width: 100%;
	height: auto;
	margin-top: 40px;
	position: relative;
}
.wk_regist_upload>div input[type=text]{width: 100%;}
.wk_regist_upload>div img{
	width: 100px;
	height: 100px;
	border-radius:50% ;
}
.wk_regist_upload>div i{
	display: block;
	width: 88px;
	height: 30px;
	border-radius:2px ;
	background: #ccc;
	text-align: center;
	line-height: 30px;
	margin-top: 35px;
	float: right;
	position: relative;
}
.wk_regist_upload>div i input{
	position: absolute;
	top:2px;
	left: 0;
	opacity: 0;
}
.wk_regist_upload>div em{
	width: 170px;
	height: 28px;
	border: 1px solid #ccc;
	float: right;
	margin-top: 35px;
	margin-right: 10px;
	line-height: 28px;
	font-size: 12px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	padding:0 5px;
}
.wk_regist_upload button{
	float: right;
	width: 116px;
	height: 30px;
	border: none;
	border-radius:5px ;
	background: orangered;
	color: #fff;
	cursor: pointer;
}
.wk_regist_upload>div div{
	width: 356px;
	border-bottom: 1px solid #ccc;
	padding-bottom: 5px;
	color: #666;
	float: right;
}
.wk_regist_upload>div input[type=text]{border: none;color: #666;font-size: 15px;}
.wk_regist_upload>div span{
	display: inline-block;
	width: 140px;
	padding-bottom: 10px;
	border-bottom: 1px solid #ccc;
}
.wk_regist_upload>div span:after{
	content: ">";
	float: right;
}
.wk_regist_upload_select{margin-left: 20px;}
.wk_regist_upload>div label+input{margin-left: 120px;}
.wk_regist_upload>div input[type=radio]{margin-right: 10px;}
.wk_regist_upload>div p{
	width: 200px;
	height: 50px;
	background: #1B6D85;
	position: absolute;
	margin-top: 0;
	top:-31px;
	right: -200px;
	font-size: 12px;
	color: #fff;
	line-height: 50px;
	font-weight: 100;
	display: none;
}
.wk_regist_upload>div a{background: orange;}
.wk_regist_password,.wk_regist_phone{
	width: 410px;
	height: 400px;
	border-radius:5px ;
	background: #fff;
	margin: 182px auto;
	padding: 0px 55px;
	border: 1px solid transparent;
}
.wk_regist_password input,.wk_regist_phone>input{
	width: 100%;
	height: auto;
	padding-bottom: 10px;
	overflow: hidden;
	border: none;
	border-bottom: 1px solid #ccc;
	margin-top: 55px;
	color: #666;
	font-size: 14px;
}
.wk_regist_password input:focus{color: orangered;border-bottom: 1px solid orangered;font-size: 20px;}
.wk_regist_password a{background: orangered;}
.wk_regist_phone div{
	width: 100%;
	height: auto;
	overflow: hidden;
	padding-bottom: 10px;
	border-bottom: 1px solid #ccc;
	margin-top: 55px;
}
.wk_regist_phone div span{font-size: 14px;color: #666;}
.wk_regist_phone div input{border: none;font-size: 14px;color: #666;margin-left: 15px;}
.wk_regist_phone div button{
	float: right;
	border: none;
	background: none;
	font-weight: bold;
	color: lightblue;
	cursor: pointer;
}
.wk_regist_phone a{background: orangered;}
/*王坤 end*/

